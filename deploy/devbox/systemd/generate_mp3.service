[Unit]
Description=Go Manager Command for converting WAV to MP3
After=network.target

[Service]
Type=simple
User=grimlock
Group=grimlock
WorkingDirectory=/deploy/ai-things/current
ExecStart=/deploy/ai-things/current/manager-go/manager job:GenerateMp3 --sleep=30
Restart=always
RestartSec=3
SyslogIdentifier=convert_to_mp3

[Install]
WantedBy=multi-user.target
