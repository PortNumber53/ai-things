[Unit]
Description=Manages tortoise tts %I
After=network.target

[Service]
User=grimlock
Group=grimlock
Restart=always
WorkingDirectory=/deploy/ai-things/current/tortoise-tts/tortoise/
ExecStart=/usr/bin/bash -c "source /usr/etc/profile.d/conda.sh && conda activate && /home/grimlock/.conda/envs/tortoise/bin/python do_tts.py"

[Install]
WantedBy=multi-user.target
