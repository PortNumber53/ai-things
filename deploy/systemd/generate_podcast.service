[Unit]
Description=Go Manager Command for Generating Podcast files
After=network.target

[Service]
Type=simple
Environment=CRYPTOGRAPHY_OPENSSL_NO_LEGACY=1
WorkingDirectory=/deploy/ai-things/current
ExecStart=/usr/bin/bash -c "source /opt/miniconda3/etc/profile.d/conda.sh && conda activate speech && /deploy/ai-things/current/manager-go/manager job:GeneratePodcast --sleep=30 --verbose"
Restart=always
RestartSec=3
SyslogIdentifier=generate_podcast

[Install]
WantedBy=default.target
