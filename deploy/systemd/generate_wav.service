[Unit]
Description=Laravel Artisan Command for Generating WAV files
After=network.target

[Service]
Type=simple
Environment=CRYPTOGRAPHY_OPENSSL_NO_LEGACY=1
WorkingDirectory=/deploy/ai-things/current/manager
ExecStart=/usr/bin/bash -c "conda activate speech && /usr/bin/php artisan job:GenerateWav --sleep=30"
Restart=always
RestartSec=3
SyslogIdentifier=generate_wav

[Install]
WantedBy=default.target
